<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SpaceXSubtitle" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/screen_subtitle_textSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/gray</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="SpaceXLaunchPropertyKey" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/screen_property_textSize</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="SpaceXLaunchPropertyValue" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/screen_description_textSize</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">@dimen/clickable_icon_size</item>
        <item name="android:layout_height">@dimen/clickable_icon_size</item>
        <item name="android:padding">@dimen/clickable_icon_padding</item>
    </style>

    <style name="IconButton" parent="Icon">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>
</resources>
